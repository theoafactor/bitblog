pipeline{
    agent any
    
    stages{

        stage("build"){
            // this is for the image building 
            echo "Building the images"
        }


        stage("compose"){
            // this stage creates the docker-compose file
            echo "creating the compose file"
        }


        stage("run"){
            // this stage is responsible for running the image
            echo "running everything"

        }



    }


}